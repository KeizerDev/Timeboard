{% extends 'layout.html.twig' %}

{% block body %}
<form method="post" action="{{ app.url_generator.generate('login_check') }}">
    <div class="mdl-login-container mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--border">
            <h2 class="mdl-card__title-text">Login</h2>
        </div>
        <div class="mdl-card__supporting-text">
            <div class="mdl-textfield mdl-js-textfield">
                <input class="mdl-textfield__input" type="text" name="_username" id="user">
                <label class="mdl-textfield__label" for="user">Gebruikersnaam</label>
            </div>
            <div class="mdl-textfield mdl-js-textfield">
                <input class="mdl-textfield__input" type="password" name="_password" id="pass">
                <label class="mdl-textfield__label" for="pass">Wachtwoord</label>
            </div>
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <input type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" value="Login">
        </div>
        <div class="mdl-card__menu">
            <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
                <i class="material-icons">account_circle</i>
            </button>
        </div>
    </div>
</form>

{% endblock body %}
